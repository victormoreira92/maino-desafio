<p style="color: green" xmlns="http://www.w3.org/1999/html"><%= notice %></p>

<div  class="container">
  <div class="row">
    <%= link_to :back do  %>
      <i class="bi-arrow-left h2"></i>
    <% end %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card text-center mt-5">
            <div class="card-header">
              <%= image_tag "user_image.png", size:"100X100", class:"rounded" %>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= @usuario.nome %></h5>
              <div class="card-text">
                <dl class="row">
                  <dt class="col-sm-2">Email: </dt>
                  <dd class="col-sm-4"><%= @usuario.email %></dd>
                </dl>
                <dl class="row">
                  <dt class="col-sm-2">Perfil: </dt>
                  <dd class="col-sm-3"><%= @usuario.perfil %></dd>
                </dl>
              </div>
              <%= link_to "Editar Dados", edit_usuario_path(@usuario), class:"btn btn-warning" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>

<div>
</div>
