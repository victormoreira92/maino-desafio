<div class="d-flex justify-content-between">
  <div class="col">
    <%= image_tag "maino.png", size: "715X250" %>
  </div>
  <div class="col-5 pt-4">
    <h2>Cadastra-se</h2>
    <div class="mb-3 pt-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3 col-8">
          <%= f.label :email, class:"form-label" %>
          <%= f.email_field :email, class:"form-control" %>
        </div>

        <div class="mb-3 col-8">
          <%= f.label 'Senha', class:"form-label"%>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
          <% end %><br />
          <%= f.password_field :password, class:"form-control" %>
        </div>

        <div class="mb-3 col-8">
          <%= f.label 'Confirmação de Senha', class:"form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="mb-3 col-8">
          <%= f.label :nome, class:"form-label" %>
          <%= f.text_field :nome, class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Cadastra-se", class:"btn btn-success" %>
        </div>
      <% end %>

    </div>

<%= render "devise/shared/links" %>
  </div>